<%= form_for [@todo, Item.new], html: { class: 'form-horizontal' }, remote: true do |f| %>

  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <br />

  <div class="control-group controls">
    <%= f.submit "Send", class: 'btn btn-primary' %>
  </div>
<% end %>

